<h2> Edit this sub:<h2>

<form action="<%= sub_url(@sub) %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="name">Sub name:</label>
    <input type="text" id="name" name="sub[title]" value="<%= @sub.title %>">
    <br>
    <label for="desc">Description:</label>
    <input type="textarea" id="desc" name="sub[description]" value="<%= @sub.description %>">
    <br>
    <input type="submit" value="Update sub!">
</form>